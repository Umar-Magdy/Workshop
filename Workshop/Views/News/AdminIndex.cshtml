@using MVCWorkshop.Data.Entities
@model IReadOnlyList<News>
<div class="row justify-content-center">
    <div class="col-xl-6 row justify-content-center">
        <a type="button" class="btn btn-primary col-xl-6" asp-controller="News" asp-action="CreateNews">Create News</a>
    </div>
</div>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th class="col-1">Id</th>
            <th class="col-2">Title</th>
            <th class="col-5">Body</th>
            <th class="col-3">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].Body</td>
                    <td>
                        <div class="row">

                            <form class="col-4 row">
                                <a type="button" class="btn btn-primary col-10" asp-controller="News" asp-action="Details" asp-route-Id="@Model[i].Id">Details</a>
                            </form>

                            <form class="col-4 row">
                                <a type="button" class="btn btn-primary col-10" asp-controller="News" asp-action="EditNews" asp-route-Id="@Model[i].Id">Edit</a>
                            </form>

                            <form class="col-4 row" asp-controller="News" asp-action="DeleteNews" asp-route-Id="@Model[i].Id" method="post">
                                <button type="submit" class="btn btn-danger col-10">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>