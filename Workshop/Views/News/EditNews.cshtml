@using MVCWorkshop.Models.ViewModels
@model EditNewsVM

<h1>Edit Category</h1>
<form enctype="multipart/form-data" class="" asp-controller="News" asp-action="EditNews" method="post">
    <div class="form-group">
        <label class="" asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label class="" asp-for="Body"></label>
        <input class="form-control" asp-for="Body" />
    </div>
    <div class="form-group">
        <label class="" asp-for="Image"></label>
        <input type="file" class="form-control" asp-for="Image" />
    </div>
    <div class="form-group">
        <label class="" asp-for="CategoryId"></label>
        <select asp-items="@(new SelectList(Model.Items,nameof(SelectListItem.Value),nameof(SelectListItem.Text)))" class="form-control" asp-for="CategoryId">
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Edit</button>
</form>