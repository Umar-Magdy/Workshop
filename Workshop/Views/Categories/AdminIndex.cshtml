@using MVCWorkshop.Data.Entities
@model IReadOnlyList<Category>
<div class="row justify-content-center">
    <div class="col-xl-6 row justify-content-center">
        <a type="button" class="btn btn-primary col-xl-6" asp-controller="Categories" asp-action="CreateCategory">Create Category</a>
    </div>
</div>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr >
            <th class="col-1" >Id</th>
            <th class ="col-8">Name</th>
            <th class="col-3">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Name</td>
                    <td>
                        <div class="row">

                            <form class="col-4 row" >
                                <a type="button" class="btn btn-primary col-12" asp-controller="Categories" asp-action="EditCategory" asp-route-Id="@Model[i].Id">Edit</a>
                            </form>

                            <form class="col-4" asp-controller="Categories" asp-action="DeleteCategory" asp-route-Id="@Model[i].Id" method="post">
                                <button type="submit" class="btn btn-danger col-12">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>






